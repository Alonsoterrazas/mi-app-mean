<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>To Do List</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">
    <% newListItems.forEach(function(item){ %>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
            <p><%= item.name %></p>
        </div>
    </form>
    <% }) %>

    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Nueva Tarea" autocomplete="off">
        <button type="submit" name="list">+</button>
    </form>
</div>
</div> <div class="box" style="text-align: center;">
    <p style="font-size: 12px; color: #888;">Servido por: <%= hostname %></p>
  </div>
</body>
</html>